{
  "name": "@tracktak/monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**",
    "services/**"
  ],
  "engines": {
    "yarn": "1.22.15",
    "node": "14.x"
  },
  "scripts": {
    "generate-exh-pairs": "node --es-module-specifier-resolution=node ./scripts/writeECBExchangePairsToJSON.js",
    "generate-fundamentals": "node --es-module-specifier-resolution=node ./scripts/writeBulkFundamentalsDataToJSON.js",
    "find-missing-gbonds": "node --es-module-specifier-resolution=node ./scripts/findMissingGBonds",
    "clean": "lerna clean",
    "tracktak-backend": "lerna run develop --parallel --scope @tracktak/database --scope @tracktak/node",
    "tracktak-app": "yarn run tracktak-backend --scope @tracktak/app",
    "tracktak-gatsby": "yarn run tracktak-backend --scope @tracktak/gatsby",
    "tracktak": "run-p tracktak-app tracktak-gatsby",
    "powersheet": "lerna run develop --parallel --scope @tracktak/powersheet",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"{packages,services}/**/*.{jsx,js}\" --write",
    "fix:lint": "eslint \"{packages,services}/**/*.{jsx,js}\" --fix",
    "release": "lerna version",
    "build": "lerna run build --parallel --scope @tracktak/app --scope @tracktak/gatsby --scope @powersheet/gatsby",
    "build-app": "lerna run build --scope @tracktak/app",
    "build-tracktak-gatsby": "lerna run build --scope @tracktak/gatsby",
    "build-powersheet-gatsby": "lerna run build --scope @powersheet/gatsby"
  },
  "devDependencies": {
    "@octokit/core": "^3.5.1",
    "@parcel/packager-raw-url": "^2.0.1",
    "@parcel/packager-xml": "^2.0.1",
    "babel-eslint": "^10.1.0",
    "dotenv": "^10.0.0",
    "editorconfig": "^0.15.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "3.9.10"
  }
}
